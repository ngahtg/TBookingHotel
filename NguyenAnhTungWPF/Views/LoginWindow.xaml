<Window x:Class="NguyenAnhTungWPF.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NguyenAnhTungWPF.Views"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800"
        
        ResizeMode="CanResize"
        BorderThickness="1"
        BorderBrush="#FF4169E1"
        WindowStyle="SingleBorderWindow"   
    >

    <Window.Resources>
        <!-- Kiểu cho TextBox đầu vào -->
        <Style TargetType="TextBox" x:Key="LoginTextBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="BorderBrush" Value="#FFB0B0B0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="10,0,0,0"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#FF4169E1"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Kiểu cho PasswordBox đầu vào -->
        <Style TargetType="PasswordBox" x:Key="LoginPasswordBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="BorderBrush" Value="#FFB0B0B0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="10,0,0,0"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#FF4169E1"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Kiểu cho Nút Login -->
        <Style TargetType="Button" x:Key="LoginButton">
            <Setter Property="Background" Value="#FF4169E1"/>
            <!-- RoyalBlue -->
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="20"
                                x:Name="border">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FF6A5ACD"/>
                                <!-- SlateBlue -->
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FF3A5CC0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Icon Vector (Path Data) -->
        <DataTemplate x:Key="UserIcon">
            <Path Data="M12,12A5,5 0 0,1 7,7A5,5 0 0,1 12,2A5,5 0 0,1 17,7A5,5 0 0,1 12,12M12,14C14.67,14 20,15.33 20,18V20H4V18C4,15.33 9.33,14 12,14Z" 
                  Fill="#FFAAAAAA" Stretch="Uniform" Width="20" Height="20"/>
        </DataTemplate>
        <DataTemplate x:Key="LockIcon">
            <Path Data="M12,17A2,2 0 0,0 14,15C14,13.89 13.1,13 12,13A2,2 0 0,0 10,15A2,2 0 0,0 12,17M18,8A2,2 0 0,1 20,10V20A2,2 0 0,1 18,22H6A2,2 0 0,1 4,20V10A2,2 0 0,1 6,8H7V6A5,5 0 0,1 12,1A5,5 0 0,1 17,6V8H18M12,3A3,3 0 0,0 9,6V8H15V6A3,3 0 0,0 12,3Z" 
                  Fill="#FFAAAAAA" Stretch="Uniform" Width="20" Height="20"/>
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <!-- Cột bên trái cho branding -->
            <ColumnDefinition Width="300"/>
            <!-- Cột bên phải cho form đăng nhập -->
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Cột 0: Branding Panel -->
        <Grid Grid.Column="0" >
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#FF6A5ACD" Offset="0"/>
                    <!-- SlateBlue -->
                    <GradientStop Color="#FF4169E1" Offset="1"/>
                    <!-- RoyalBlue -->
                </LinearGradientBrush>
            </Grid.Background>
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" >
                <TextBlock Text="Welcome" 
                           Foreground="White" 
                           FontSize="36" 
                           FontWeight="Bold" 
                           FontFamily="Segoe UI Light"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="Sign in to your account" 
                           Foreground="White" 
                           FontSize="16" 
                           FontFamily="Segoe UI"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>

        <!-- Cột 1: Login Form Panel -->
        <Grid Grid.Column="1" Background="White" >



            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Left" Width="300" Margin="60,0,60,0">

                <!-- Tiêu đề -->
                <TextBlock Text="LOGIN" 
                           FontSize="28" 
                           FontWeight="Bold" 
                           Foreground="#333333" 
                           Margin="0,0,0,30" 
                           FontFamily="Segoe UI"/>

                <!-- Email Input -->
                <TextBlock Text="Email Address" 
                           Foreground="#555555" 
                           FontSize="12" 
                           FontFamily="Segoe UI"/>
                <Grid Margin="0,5,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <ContentPresenter ContentTemplate="{StaticResource UserIcon}" 
                                      VerticalAlignment="Center" 
                                      Margin="0,0,5,0" Opacity="0.8"/>

                    <!-- GIỮ NGUYÊN BINDING CHO EMAIL -->
                    <TextBox Grid.Column="1"
                             Style="{StaticResource LoginTextBox}"
                             Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" />
                </Grid>

                <!-- Password Input -->
                <TextBlock Text="Password" 
                           Foreground="#555555" 
                           FontSize="12" 
                           FontFamily="Segoe UI"/>
                <Grid Margin="0,5,0,30">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <ContentPresenter ContentTemplate="{StaticResource LockIcon}" 
                                      VerticalAlignment="Center" 
                                      Margin="0,0,5,0" Opacity="0.8"/>

                    <!-- GIỮ NGUYÊN TÊN VÀ CÁC THUỘC TÍNH BINDING -->
                    <PasswordBox x:Name="Password" 
                                 Grid.Column="1"
                                 Style="{StaticResource LoginPasswordBox}"/>
                </Grid>

                <!-- Login Button -->
                <TextBlock Text="{Binding ErrorMessage}" Foreground="Red" Margin="0,10,0,0" TextWrapping="Wrap"/>
                <Button Content="Login" IsDefault="True" 
                        Style="{StaticResource LoginButton}"
                        Command="{Binding LoginCommand}" 
                        CommandParameter="{Binding ElementName=Password}" 
                        Height="40"/>
                

                <!-- Error Message -->
                
            </StackPanel>
        </Grid>
    </Grid>
</Window>