<Window x:Class="NguyenAnhTungWPF.Views.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NguyenAnhTungWPF.Views"
        mc:Ignorable="d"
        Title="Admin Dashboard - FUMiniHotelSystem" 
        Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#F4F6FA">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TabControl Grid.Row="0" Background="White" BorderThickness="0" Padding="10" >
            <!-- Tab Quản lý Khách hàng -->
            <TabItem Header="👥 Customer Management" >
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="CUSTOMER MANAGEMENT" 
                               FontSize="20" FontWeight="Bold" Foreground="#1E3A8A" 
                               Margin="0,0,0,10" HorizontalAlignment="Center"/>

                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
                        <Label Content="Search by Name:" VerticalAlignment="Center"/>
                        <TextBox Width="200" Margin="5,0" 
                                 Text="{Binding CustomerSearchText, UpdateSourceTrigger=PropertyChanged}"/>
                        <Button Content="Search" Command="{Binding SearchCustomerCommand}" 
                                Background="#3B82F6" Foreground="White" Margin="10,0,0,0" Padding="10,3"/>

                        <Button Content="Add New" Command="{Binding AddCustomerCommand}" 
                                Background="#10B981" Foreground="White" Margin="50,0,0,0" Padding="10,3"/>
                        <Button Content="Update Selected" Command="{Binding UpdateCustomerCommand}" 
                                Background="#F59E0B" Foreground="White" Margin="10,0,0,0" Padding="10,3"/>
                        <Button Content="Delete Selected" Command="{Binding DeleteCustomerCommand}" 
                                Background="#EF4444" Foreground="White" Margin="10,0,0,0" Padding="10,3"/>
                    </StackPanel>

                    <DataGrid Grid.Row="2" AutoGenerateColumns="False" CanUserAddRows="False" 
                              ItemsSource="{Binding Customers}" 
                              SelectedItem="{Binding SelectedCustomer}"
                              IsReadOnly="True" 
                              Background="#F9FAFB"
                              BorderBrush="#CBD5E1" BorderThickness="1"
                              RowBackground="White" AlternatingRowBackground="#F1F5F9"
                              >
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Customer ID" Binding="{Binding CustomerId}" Width="100"/>
                            <DataGridTextColumn Header="Full Name" Binding="{Binding CustomerFullName}" Width="*"/>
                            <DataGridTextColumn Header="Telephone" Binding="{Binding Telephone}" Width="120"/>
                            <DataGridTextColumn Header="Email" Binding="{Binding EmailAddress}" Width="*"/>
                            <DataGridTextColumn Header="Birthday" Binding="{Binding CustomerBirthday, StringFormat='dd/MM/yyyy'}" Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <!-- Tab Quản lý Phòng -->
            <TabItem Header="🏠 Room Management">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="ROOM MANAGEMENT" FontSize="20" FontWeight="Bold" 
                               Foreground="#1E3A8A" Margin="0,0,0,10" HorizontalAlignment="Center"/>

                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
                        <Label Content="Search by Room Number:" VerticalAlignment="Center"/>
                        <TextBox Width="150" Margin="5,0" 
                                 Text="{Binding RoomSearchText, UpdateSourceTrigger=PropertyChanged}"/>
                        <Button Content="Search" Command="{Binding SearchRoomCommand}" 
                                Background="#3B82F6" Foreground="White" Margin="10,0,0,0" Padding="10,3"/>

                        <Button Content="Add New" Command="{Binding AddRoomCommand}" 
                                Background="#10B981" Foreground="White" Margin="50,0,0,0" Padding="10,3"/>
                        <Button Content="Update Selected" Command="{Binding UpdateRoomCommand}" 
                                Background="#F59E0B" Foreground="White" Margin="10,0,0,0" Padding="10,3"/>
                        <Button Content="Delete Selected" Command="{Binding DeleteRoomCommand}" 
                                Background="#EF4444" Foreground="White" Margin="10,0,0,0" Padding="10,3"/>
                    </StackPanel>

                    <DataGrid Grid.Row="2" AutoGenerateColumns="False" CanUserAddRows="False"
                              ItemsSource="{Binding Rooms}"
                              SelectedItem="{Binding SelectedRoom}"
                              IsReadOnly="True"
                              Background="#F9FAFB"
                              BorderBrush="#CBD5E1" BorderThickness="1"
                              RowBackground="White" AlternatingRowBackground="#F1F5F9"
                            >
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Room ID" Binding="{Binding RoomId}" Width="80"/>
                            <DataGridTextColumn Header="Room Number" Binding="{Binding RoomNumber}" Width="100"/>
                            <DataGridTextColumn Header="Description" Binding="{Binding RoomDetailDescription}" Width="*"/>
                            <DataGridTextColumn Header="Max Capacity" Binding="{Binding RoomMaxCapacity}" Width="100"/>
                            <DataGridTextColumn Header="Room Type" Binding="{Binding RoomType.RoomTypeName}" Width="120"/>
                            <DataGridTextColumn Header="Status" Binding="{Binding RoomStatus}" Width="80"/>
                            <DataGridTextColumn Header="Price/Day" Binding="{Binding RoomPricePerDay, StringFormat='C'}" Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <!-- Tab Quản lý Đặt phòng -->
            <TabItem Header="📅 Booking Management">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="BOOKING MANAGEMENT" FontSize="20" FontWeight="Bold" 
                               Foreground="#1E3A8A" Margin="0,0,0,10" HorizontalAlignment="Center"/>

                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
                        <Label Content="Search by Customer Name:" VerticalAlignment="Center"/>
                        <TextBox Width="200" Margin="5,0" 
                                 Text="{Binding BookingSearchText, UpdateSourceTrigger=PropertyChanged}"/>
                        <Button Content="Search" Command="{Binding SearchBookingCommand}" 
                                Background="#3B82F6" Foreground="White" Margin="10,0,0,0" Padding="10,3"/>

                        <Button Content="Add New" Command="{Binding AddBookingCommand}" 
                                Background="#10B981" Foreground="White" Margin="50,0,0,0" Padding="10,3"/>
                        <Button Content="Update Selected" Command="{Binding UpdateBookingCommand}" 
                                Background="#F59E0B" Foreground="White" Margin="10,0,0,0" Padding="10,3"/>
                        <Button Content="Delete Selected" Command="{Binding DeleteBookingCommand}" 
                                Background="#EF4444" Foreground="White" Margin="10,0,0,0" Padding="10,3"/>
                    </StackPanel>

                    <DataGrid Grid.Row="2" AutoGenerateColumns="False" CanUserAddRows="False"
                              ItemsSource="{Binding Bookings}"
                              SelectedItem="{Binding SelectedBooking}"
                              IsReadOnly="True"
                              Background="#F9FAFB"
                              BorderBrush="#CBD5E1" BorderThickness="1"
                              RowBackground="White" AlternatingRowBackground="#F1F5F9"
                              >
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Booking ID" Binding="{Binding BookingReservationId}" Width="100"/>
                            <DataGridTextColumn Header="Customer" Binding="{Binding Customer.CustomerFullName}" Width="*"/>
                            <DataGridTextColumn Header="Booking Date" Binding="{Binding BookingDate, StringFormat='dd/MM/yyyy'}" Width="120"/>
                            <DataGridTextColumn Header="Total Price" Binding="{Binding TotalPrice, StringFormat='C'}" Width="120"/>
                            <DataGridTextColumn Header="Status" Binding="{Binding BookingStatus}" Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <!-- Tab Báo cáo -->
            <TabItem Header="📊 Statistics &amp; Reports">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="REVENUE REPORT" FontSize="20" FontWeight="Bold" 
                               Foreground="#1E3A8A" Margin="0,0,0,10" HorizontalAlignment="Center"/>

                    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                        <Label Content="Start Date:" VerticalAlignment="Center"/>
                        <DatePicker Width="150" Margin="5,0" SelectedDate="{Binding ReportStartDate}"/>
                        <Label Content="End Date:" Margin="20,0,0,0" VerticalAlignment="Center"/>
                        <DatePicker Width="150" Margin="5,0" SelectedDate="{Binding ReportEndDate}"/>
                        <Button Content="Generate Report" Background="#3B82F6" Foreground="White"
                                Margin="20,0,0,0" Padding="10,3" Command="{Binding GenerateReportCommand}"/>
                    </StackPanel>

                    <DataGrid Grid.Row="2" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True"
                              ItemsSource="{Binding ReportResults}"
                              Background="#F9FAFB"
                              BorderBrush="#CBD5E1" BorderThickness="1"
                              RowBackground="White" AlternatingRowBackground="#F1F5F9"
                            >
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Booking ID" Binding="{Binding BookingReservationId}" Width="100"/>
                            <DataGridTextColumn Header="Booking Date" Binding="{Binding BookingDate, StringFormat='dd/MM/yyyy'}" Width="120"/>
                            <DataGridTextColumn Header="Customer Name" Binding="{Binding Customer.CustomerFullName}" Width="*"/>
                            <DataGridTextColumn Header="Total Price" Binding="{Binding TotalPrice, StringFormat='C'}" Width="150"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
        </TabControl>

        <!-- Nút Đăng xuất -->
        <Button Grid.Row="1" Content="Logout" Command="{Binding LogoutCommand}" 
                HorizontalAlignment="Right" Padding="20,6" Margin="0,10,0,0"
                Background="#64748B" Foreground="White" FontWeight="SemiBold"
                BorderThickness="0" Cursor="Hand" Width="100" Height="35"
                BorderBrush="#334155" />
    </Grid>
</Window>
