<Window x:Class="NguyenAnhTungWPF.Views.ManageBookingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NguyenAnhTungWPF.Views"
        mc:Ignorable="d"
        Title="{Binding WindowTitle}" Height="500" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="{Binding WindowTitle}" FontSize="18" FontWeight="Bold" Margin="0,0,0,15" HorizontalAlignment="Center"/>

        <Grid Grid.Row="1" DataContext="{Binding CurrentBooking}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Label Grid.Row="0" Grid.Column="0" Content="Booking ID:"/>
            <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding BookingReservationId}" IsReadOnly="True" Margin="5"/>

            <Label Grid.Row="0" Grid.Column="2" Content="Booking Date:"/>
            <DatePicker Grid.Row="0" Grid.Column="3" SelectedDate="{Binding BookingDate}" Margin="5"/>

            <Label Grid.Row="1" Grid.Column="0" Content="Customer:"/>
            <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Customer.CustomerFullName}" IsReadOnly="True" Margin="5"/>

            <Label Grid.Row="1" Grid.Column="2" Content="Status:"/>
            <TextBox Grid.Row="1" Grid.Column="3" Text="{Binding BookingStatus}" Margin="5"/>

            <Label Grid.Row="2" Grid.Column="0" Content="Total Price:"/>
            <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding TotalPrice, StringFormat='C'}" IsReadOnly="True" Margin="5"/>
        </Grid>

        <Grid Grid.Row="2" Margin="0,20,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="Booking Details" FontSize="16" FontWeight="Medium" Margin="0,0,0,5"/>

            <DataGrid Grid.Row="1" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True"
                      ItemsSource="{Binding BookingDetailsList}"
                      SelectedItem="{Binding SelectedDetail}"
                      Margin="0,0,0,10">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Room #" Binding="{Binding Room.RoomNumber}" Width="100"/>
                    <DataGridTextColumn Header="Room Type" Binding="{Binding Room.RoomType.RoomTypeName}" Width="*"/>
                    <DataGridTextColumn Header="Start Date" Binding="{Binding StartDate, StringFormat='dd/MM/yyyy'}" Width="120"/>
                    <DataGridTextColumn Header="End Date" Binding="{Binding EndDate, StringFormat='dd/MM/yyyy'}" Width="120"/>
                    <DataGridTextColumn Header="Price" Binding="{Binding ActualPrice, StringFormat='C'}" Width="120"/>
                </DataGrid.Columns>
            </DataGrid>

            <Button Grid.Row="2" Content="Remove Selected Detail" 
                    Command="{Binding RemoveDetailCommand}"
                    HorizontalAlignment="Left" Padding="10,5"/>
        </Grid>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="Save Changes" Command="{Binding SaveCommand}" Padding="15,5" Margin="0,0,10,0"/>
            <Button Content="Cancel" Command="{Binding CancelCommand}" Padding="15,5" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>