<Window x:Class="NguyenAnhTungWPF.Views.CustomerProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Customer Dashboard - FUMiniHotelSystem"
        Height="750" Width="950"
        WindowStartupLocation="CenterScreen"
        Background="#F7F8FA">

    <DockPanel LastChildFill="True">
        <!-- Header -->
        <Border Background="#2C3E50" Height="60" DockPanel.Dock="Top">
            <DockPanel>
                <TextBlock Text="FUMiniHotel System"
                           Foreground="White"
                           FontWeight="Bold"
                           FontSize="20"
                           Margin="20,0"
                           VerticalAlignment="Center"/>

                <Button Content="Logout"
                        Command="{Binding LogoutCommand}"
                        Background="#E74C3C"
                        Foreground="White"
                        Padding="10,5"
                        Margin="0,10,20,10"
                        HorizontalAlignment="Right"
                        BorderThickness="0"
                        Cursor="Hand"
                        DockPanel.Dock="Right"/>
            </DockPanel>
        </Border>

        <!-- Nội dung chính -->
        <Grid Margin="20">
            <TabControl FontSize="14"
                        BorderThickness="0"
                        Background="White"
                        Padding="10"
                        TabStripPlacement="Top">

                <!-- TAB 1: MY PROFILE -->
                <TabItem Header="My Profile">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <Border Padding="30" Background="#FFFFFF" CornerRadius="8" Margin="10" >
                            <Grid HorizontalAlignment="Center" Width="450">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Row="0" Grid.ColumnSpan="2"
                                           Text="MY PROFILE"
                                           FontSize="22"
                                           FontWeight="Bold"
                                           Foreground="#2C3E50"
                                           Margin="0,0,0,25"
                                           HorizontalAlignment="Center"/>

                                <Label Grid.Row="1" Content="Full Name:" Margin="5"/>
                                <TextBox Grid.Row="1" Grid.Column="1"
                                         Text="{Binding FullName, UpdateSourceTrigger=PropertyChanged}"
                                         Margin="5" Height="30"/>

                                <Label Grid.Row="2" Content="Email Address:" Margin="5"/>
                                <TextBox Grid.Row="2" Grid.Column="1"
                                         Text="{Binding Email}"
                                         IsReadOnly="True"
                                         Background="#EEEEEE"
                                         Margin="5" Height="30"/>

                                <Label Grid.Row="3" Content="Telephone:" Margin="5"/>
                                <TextBox Grid.Row="3" Grid.Column="1"
                                         Text="{Binding Telephone, UpdateSourceTrigger=PropertyChanged}"
                                         Margin="5" Height="30"/>

                                <Label Grid.Row="4" Content="Birthday:" Margin="5"/>
                                <DatePicker Grid.Row="4" Grid.Column="1"
                                            SelectedDate="{Binding Birthday, UpdateSourceTrigger=PropertyChanged}"
                                            Margin="5"/>

                                <Label Grid.Row="5" Content="Password:" Margin="5"/>
                                <TextBox Grid.Row="5" Grid.Column="1"
                                         Text="{Binding Password, UpdateSourceTrigger=PropertyChanged}"
                                         Margin="5" Height="30"/>

                                <Button Grid.Row="6" Grid.Column="1"
                                        Content="Update My Profile"
                                        Command="{Binding UpdateProfileCommand}"
                                        HorizontalAlignment="Left"
                                        Padding="20,6"
                                        Background="#3498DB"
                                        Foreground="White"
                                        BorderThickness="0"
                                        Cursor="Hand"
                                        Margin="5,20,5,10"/>

                                <TextBlock Grid.Row="7" Grid.Column="1"
                                           Text="{Binding ErrorMessage}"
                                           Foreground="Red"
                                           FontStyle="Italic"
                                           Margin="5,10,0,0"/>
                            </Grid>
                        </Border>
                    </ScrollViewer>
                </TabItem>

                <!-- TAB 2: MY BOOKING HISTORY -->
                <TabItem Header="My Booking History">
                    <Grid Margin="10">
                        <TextBlock Text="MY BOOKING RESERVATION HISTORY"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   Margin="0,0,0,15"
                                   HorizontalAlignment="Center"/>

                        <DataGrid AutoGenerateColumns="False"
                                  CanUserAddRows="False"
                                  IsReadOnly="True"
                                  ItemsSource="{Binding BookingHistory}"
                                  Margin="0,40,0,0"
                                  RowHeight="30"
                                  AlternatingRowBackground="#F2F2F2"
                                  HeadersVisibility="Column">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Booking ID" Binding="{Binding BookingReservationId}" Width="100"/>
                                <DataGridTextColumn Header="Booking Date" Binding="{Binding BookingDate, StringFormat='dd/MM/yyyy'}" Width="150"/>
                                <DataGridTextColumn Header="Total Price" Binding="{Binding TotalPrice, StringFormat='C'}" Width="150"/>
                                <DataGridTextColumn Header="Status" Binding="{Binding BookingStatus}" Width="*"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </TabItem>

                <!-- TAB 3: NEW BOOKING -->
                <TabItem Header="New Booking">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <Grid Margin="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="2*"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0"
                                       Text="1. SELECT ROOMS AND DATES"
                                       FontSize="20"
                                       FontWeight="Bold"
                                       Margin="0,0,0,15"
                                       HorizontalAlignment="Center"/>

                            <!-- Danh sách phòng -->
                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="250"/>
                                </Grid.ColumnDefinitions>

                                <DataGrid Grid.Column="0"
                                          AutoGenerateColumns="False"
                                          CanUserAddRows="False"
                                          IsReadOnly="True"
                                          ItemsSource="{Binding AvailableRooms}"
                                          SelectedItem="{Binding SelectedAvailableRoom}"
                                          Margin="0,0,10,0"
                                          AlternatingRowBackground="#F9F9F9">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Room #" Binding="{Binding RoomNumber}" Width="80"/>
                                        <DataGridTextColumn Header="Type" Binding="{Binding RoomType.RoomTypeName}" Width="150"/>
                                        <DataGridTextColumn Header="Capacity" Binding="{Binding RoomMaxCapacity}" Width="100"/>
                                        <DataGridTextColumn Header="Price/Day" Binding="{Binding RoomPricePerDay, StringFormat='C'}" Width="120"/>
                                        <DataGridTextColumn Header="Description" Binding="{Binding RoomDetailDescription}" Width="*"/>
                                    </DataGrid.Columns>
                                </DataGrid>

                                <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                    <Label Content="Start Date:"/>
                                    <DatePicker SelectedDate="{Binding NewBookingStartDate}"/>
                                    <Label Content="End Date:" Margin="0,10,0,0"/>
                                    <DatePicker SelectedDate="{Binding NewBookingEndDate}"/>
                                    <Button Content="Add to Booking"
                                            Command="{Binding AddDetailCommand}"
                                            Background="#27AE60"
                                            Foreground="White"
                                            Padding="10,5"
                                            Margin="0,20,0,0"
                                            BorderThickness="0"/>
                                </StackPanel>
                            </Grid>

                            <TextBlock Grid.Row="2"
                                       Text="2. REVIEW YOUR BOOKING"
                                       FontSize="20"
                                       FontWeight="Bold"
                                       Margin="0,20,0,10"
                                       HorizontalAlignment="Center"/>

                            <!-- Chi tiết đặt phòng -->
                            <Grid Grid.Row="3">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <DataGrid Grid.Column="0"
                                          AutoGenerateColumns="False"
                                          CanUserAddRows="False"
                                          IsReadOnly="True"
                                          ItemsSource="{Binding PendingBookingDetails}"
                                          SelectedItem="{Binding SelectedPendingDetail}"
                                          Margin="0,0,10,0"
                                          AlternatingRowBackground="#F9F9F9">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Room #" Binding="{Binding Room.RoomNumber}" Width="100"/>
                                        <DataGridTextColumn Header="Type" Binding="{Binding Room.RoomType.RoomTypeName}" Width="*"/>
                                        <DataGridTextColumn Header="Start Date" Binding="{Binding StartDate, StringFormat='dd/MM/yyyy'}" Width="120"/>
                                        <DataGridTextColumn Header="End Date" Binding="{Binding EndDate, StringFormat='dd/MM/yyyy'}" Width="120"/>
                                        <DataGridTextColumn Header="Price" Binding="{Binding ActualPrice, StringFormat='C'}" Width="120"/>
                                    </DataGrid.Columns>
                                </DataGrid>

                                <Button Grid.Column="1"
                                        Content="Remove Selected"
                                        Command="{Binding RemoveDetailCommand}"
                                        VerticalAlignment="Top"
                                        Padding="10,5"
                                        Background="#E67E22"
                                        Foreground="White"
                                        BorderThickness="0"/>
                            </Grid>

                            <!-- Tổng tiền và xác nhận -->
                            <StackPanel Grid.Row="4" HorizontalAlignment="Right" Margin="0,20,0,0">
                                <TextBlock Text="{Binding TotalBookingPrice, StringFormat='Total Price: {0:C}'}"
                                           FontSize="16"
                                           FontWeight="Bold"
                                           HorizontalAlignment="Right"/>
                                <Button Content="Confirm and Book"
                                        Command="{Binding CreateBookingCommand}"
                                        Background="#2980B9"
                                        Foreground="White"
                                        Padding="20,6"
                                        Margin="0,10,0,0"
                                        BorderThickness="0"/>
                                <TextBlock Text="{Binding BookingErrorMessage}"
                                           Foreground="Red"
                                           Margin="0,10,0,0"
                                           TextWrapping="Wrap"
                                           HorizontalAlignment="Right"/>
                            </StackPanel>
                        </Grid>
                    </ScrollViewer>
                </TabItem>
            </TabControl>
        </Grid>
    </DockPanel>
</Window>
